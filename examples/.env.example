# Example environment configuration for python-prompt-manager

# Core Configuration

# Validation mode: none, env_only, load_test
PROMPT_MANAGER_VALIDATE_ON_STARTUP=env_only

# Cache settings
PROMPT_MANAGER_CACHE_ENABLED=true
PROMPT_MANAGER_CACHE_TTL=3600

# Default source type (optional)
PROMPT_MANAGER_DEFAULT_SOURCE=openai

# Source Configuration

# OpenAI Configuration
PROMPT_MANAGER_OPENAI_API_KEY=sk-your-api-key-here
PROMPT_MANAGER_OPENAI_TIMEOUT=30
PROMPT_MANAGER_OPENAI_MAX_RETRIES=3

# Local File Configuration
PROMPT_MANAGER_PROMPTS_DIR=/path/to/your/prompts

# Prompt Registration Examples

# Example: OpenAI prompt
PROMPT_WELCOME_SOURCE=openai
PROMPT_WELCOME_ID=pmpt_1234567890abcdef
PROMPT_WELCOME_VERSION=1.0
PROMPT_WELCOME_CACHE_TTL=7200

# Example: Local file prompt
PROMPT_GREETING_SOURCE=local
PROMPT_GREETING_PATH=greeting.txt
PROMPT_GREETING_CACHE_TTL=300

# Example: Another OpenAI prompt
PROMPT_ANALYSIS_SOURCE=openai
PROMPT_ANALYSIS_ID=pmpt_abcdef1234567890
PROMPT_ANALYSIS_VERSION=2.0

# Example: Local YAML prompt
PROMPT_CONFIG_SOURCE=local
PROMPT_CONFIG_PATH=config/assistant.yaml